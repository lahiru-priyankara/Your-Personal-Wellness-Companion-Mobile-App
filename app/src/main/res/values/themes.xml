<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 30% Primary -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- 60% Surfaces/Panels: Mist Blue -->
        <item name="colorSurface">@color/surfaceContainer</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorSurfaceVariant">@color/surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant</item>
        <item name="android:windowBackground">@color/surfaceContainer</item>

        <!-- Secondary used for subdued components (chips, secondary buttons) -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- 10% Accent for highlights -->
        <item name="colorTertiary">@color/colorAccent</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="Theme.MyApplication.Alt" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#1B5E20</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#8BC34A</item>
        <item name="colorOnSecondary">#1A1A1A</item>
        <item name="colorTertiary">#FF6D00</item>
    </style>

    <style name="Theme.MyApplication.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorTertiary">#CF6679</item>
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowBackground">#121212</item>
    </style>
</resources>