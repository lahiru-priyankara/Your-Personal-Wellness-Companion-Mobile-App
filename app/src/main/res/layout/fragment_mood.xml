<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/professional_gradient_bg"
    tools:context=".MoodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Professional Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="😊"
                    android:textSize="48sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mood Journal"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your emotional wellness daily"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Mood Selection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How are you feeling today?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Emoji Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Row 1: Very Happy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/emoji1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😄"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/emoji2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😊"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/emoji3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😌"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <!-- Row 2: Neutral -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/emoji4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😐"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/emoji5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😕"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/emoji6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😔"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                    <!-- Row 3: Sad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/emoji7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😢"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/emoji8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😭"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                        <TextView
                            android:id="@+id/emoji9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="😤"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/button_primary"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Selected Mood Display -->
                <LinearLayout
                    android:id="@+id/selectedMoodContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/button_primary"
                    android:padding="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/selectedMoodEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="😊"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/selectedMoodText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Happy"
                        android:textSize="16sp"
                        android:textColor="@color/colorOnPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Note Input -->
                <EditText
                    android:id="@+id/noteEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Add a note about your mood (optional)"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:background="@drawable/card_professional"
                    android:padding="16dp"
                    android:layout_marginTop="16dp"
                    android:inputType="textMultiLine"
                    android:maxLines="3" />

                <!-- Professional Add Mood Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/addMoodBtn"
                        android:layout_width="0dp"
                        android:layout_height="74dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_accent"
                        android:drawableStart="@android:drawable/ic_input_add"
                        android:drawablePadding="8dp"
                        android:padding="16dp"
                        android:text="Log My Mood"
                        android:textColor="@color/background"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Professional Mood History -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Recent Moods"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Mood Summary -->
                <LinearLayout
                    android:id="@+id/moodSummaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_professional"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/moodSummaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your mood journey starts here!"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/moodCountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 moods logged"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/lastMoodEmoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="😊"
                        android:textSize="24sp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Recent Moods List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/moodRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="300dp"
                    android:clipToPadding="false" />

                <!-- Fallback ListView for compatibility -->
                <ListView
                    android:id="@+id/moodList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="8dp"
                    android:visibility="gone" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Action Buttons (moved inside main container to keep single child for ScrollView) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/surfaceContainer"
            android:padding="16dp"
            android:elevation="8dp">

            <Button
                android:id="@+id/professionalAddBtn"
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_accent"
                android:padding="16dp"
                android:text="Add"
                android:textColor="@color/background"
                android:textStyle="bold" />

            <Button
                android:id="@+id/quickMoodBtn"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary"
                android:padding="16dp"
                android:text="Quick Mood"
                android:textColor="@color/background" />

            <Button
                android:id="@+id/shareMoodBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary"
                android:padding="16dp"
                android:text="Share"
                android:textColor="@color/background" />

            <Button
                android:id="@+id/clearMoodsBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_secondary"
                android:padding="16dp"
                android:text="Clear"
                android:textColor="@color/background" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>


