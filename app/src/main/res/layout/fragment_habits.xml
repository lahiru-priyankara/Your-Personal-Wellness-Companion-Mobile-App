<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/professional_gradient_bg"
    tools:context=".HabitsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Professional Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background">

            </androidx.cardview.widget.CardView>

            <!-- Empty State Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/emptyStateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surfaceContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="48sp" />

                    <TextView
                        android:id="@+id/emptyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No habits yet. Tap + to add your first habit!"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginTop="12dp" />

                    <!-- Direct Add Button -->
                    <Button
                        android:id="@+id/quickAddBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="âž• Add Habit Now"
                        android:textColor="@color/colorOnAccent"
                        android:background="@drawable/button_accent"
                        android:padding="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Habits List -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ðŸŽ¯ Daily Habits"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="28dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@color/background"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Today's completion: 0/0 (0%)"
                    android:textColor="@color/colorOnAccent"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:progressBackgroundTint="@color/background"
                    android:progressTint="@color/progress_fill" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="41dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/habitsRecycler"
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="#FDFDFD"
                android:clipToPadding="false"
                android:paddingBottom="80dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="42dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:elevation="8dp"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/headerShareBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_secondary"
                    android:padding="16dp"
                    android:text="Share Progress"
                    android:textColor="@color/background" />

                <Button
                    android:id="@+id/headerAddBtn"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_accent"
                    android:padding="16dp"
                    android:text="Add Habit"
                    android:textColor="@color/background"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Action Buttons -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>


