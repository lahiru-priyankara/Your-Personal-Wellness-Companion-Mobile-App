<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/colorPrimary" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš™ï¸ Advanced Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Data Management Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Data Management"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Data Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/habitsCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 habits"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Habits"
                            android:textSize="10sp"
                            android:textColor="@color/onSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/moodsCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 moods"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moods"
                            android:textSize="10sp"
                            android:textColor="@color/onSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/goalsCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 goals"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals"
                            android:textSize="10sp"
                            android:textColor="@color/onSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/challengesCountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 challenges"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Challenges"
                            android:textSize="10sp"
                            android:textColor="@color/onSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/totalDataText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 total entries"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Data Actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/exportDataButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Export"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorOnPrimary"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/importDataButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorSecondary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Import"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/background"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/clearAllDataButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/colorAccentVariant"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Clear"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Analytics & Insights Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Analytics and Insights"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Analytics Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Analytics"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:id="@+id/analyticsStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âœ… Enabled"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/analyticsSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Settings"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorOnPrimary"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Insights Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Insights"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:id="@+id/insightsStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âœ… Enabled"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/insightsSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorSecondary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Settings"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/background"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Privacy Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Privacy"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:id="@+id/privacyStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âœ… Standard Mode"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/privacySettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Settings"
                            android:textColor="@color/background"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- App Behavior Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ App Behavior"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Notification Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:id="@+id/notificationStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âœ… Enabled"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/notificationSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorAccentVariant"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Settings"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorOnPrimary"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Theme Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Theme"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âœ… Light Theme"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/themeSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorSecondary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Settings"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/background"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Language Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Language"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/onSurface" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="âœ… English"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/languageSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Settings"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/background"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Advanced Features Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ Advanced Features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/onSurface"
                    android:layout_marginBottom="16dp" />

                <!-- Widget Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Widget"
                            android:textColor="@color/onSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home screen widget"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/widgetSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Settings"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorOnPrimary"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Sync Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sync"
                            android:textColor="@color/onSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/syncStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Local Only"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/syncSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/colorSecondary"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Settings"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/background"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Backup Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Backup"
                            android:textColor="@color/onSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/backupStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manual Backup"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/backupSettingsButton"
                            android:layout_width="60dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="4dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/colorAccent"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Backup"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="@color/background"
                                android:gravity="center" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/restoreSettingsButton"
                            android:layout_width="60dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/colorAccent"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Restore"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorOnPrimary"
                                android:gravity="center" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <!-- Debug Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Debug"
                            android:textColor="@color/onSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Debug information"
                            android:textColor="@color/onSurfaceVariant"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/debugSettingsButton"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FF5722"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="View"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:gravity="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
